          <Select Path="Microsoft-Windows-Hyper-V-VMMS-Storage">*</Select>
          <Select Path="Microsoft-Windows-Hyper-V-Worker-Admin">*</Select>
          <Select Path="System">*[System[Provider[@Name='Microsoft-Windows-Hyper-V-Hypervisor']]]</Select>
