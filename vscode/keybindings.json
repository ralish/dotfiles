[
    /*
     * Visual Studio Code keybindings
     *
     * Default file path: %APPDATA%\Code\User\keybindings.json
     */

    // Close window if there's nothing open
    {
        "key": "ctrl+w",
        "command": "workbench.action.closeWindow",
        "when": "!editorIsOpen && !multipleEditorGroups"
    }
]
