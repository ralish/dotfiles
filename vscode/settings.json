{
    /*
     * Visual Studio Code settings
     *
     * Last reviewed release: v1.105.0
     * Default file path: %APPDATA%\Code\User\settings.json
     */

    // Explicitly set schema for directly editing in dotfiles repo
    "$schema": "vscode://schemas/settings/user",

    // Text Editor
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": false,
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "boundary",
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.trimWhitespaceOnDelete": true,
    "editor.unicodeHighlight.includeComments": true,
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.wrappingIndent": "indent",

    // Text Editor: Cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.cursorStyle": "line-thin",

    // Text Editor: Find
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.find.seedSearchStringFromSelection": "selection",

    // Text Editor: Diff Editor
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.maxComputationTime": 10000,

    // Text Editor: Minimap
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "fit",

    // Text Editor: Suggestions
    "editor.acceptSuggestionOnEnter": "smart",

    // Text Editor: Files
    "files.associations": {
        // Configuration files in INI format
        "*.cnf": "ini",
        "*.inf": "ini",
        // NuGet restore cache files
        "project.nuget.cache": "json"
    },
    "files.autoSave": "onWindowChange",
    "files.enableTrash": false,
    "files.hotExit": "onExitAndWindowClose",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Workbench
    "workbench.editorAssociations": {
        // Disable GitLens interactive rebase editor
        "git-rebase-todo": "default"
    },
    "workbench.enableExperiments": false,
    "workbench.list.smoothScrolling": true,
    "workbench.navigationControl.enabled": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.startupEditor": "readme",

    // Workbench: Appearance
    "workbench.iconTheme": "vscode-icons",
    "workbench.view.alwaysShowHeaderActions": true,

    // Workbench: Editor Management
    "workbench.editor.alwaysShowEditorActions": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.languageDetection": false,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.editor.preventPinnedEditorClose": "never",
    "workbench.editor.revealIfOpen": true,

    // Workbench: Settings Editor
    "workbench.settings.editor": "json",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.showAISearchToggle": false,

    // Workbench: Zen Mode
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.restore": false,

    // Window
    "window.confirmSaveUntitledWorkspace": false,

    // Window: New Window
    "window.newWindowDimensions": "inherit",

    // Features: Explorer
    "explorer.autoReveal": "focusNoScroll",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",

    // Features: Search
    "search.collapseResults": "auto",
    "search.seedOnFocus": true,
    "search.smartCase": true,

    // Features: Debug
    "debug.confirmOnExit": "always",
    "debug.console.acceptSuggestionOnEnter": "on",
    "debug.hideLauncherWhileDebugging": true,
    "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.showVariableTypes": true,

    // Features: Terminal
    "terminal.explorerKind": "both",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.hideOnLastClosed": false,
    "terminal.integrated.hideOnStartup": "whenEmpty",
    "terminal.integrated.initialHint": false,
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.showActions": "always",
    "terminal.sourceControlRepositoriesKind": "both",

    // Features: Task
    "task.notifyWindowOnTaskCompletion": -1,

    // Features: Remote
    "remote.autoForwardPorts": false,

    // Features: Notebook
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll.ruff": "explicit",
        "notebook.source.organizeImports.ruff": "explicit"
    },
    "notebook.consolidatedRunButton": true,
    "notebook.defaultFormatter": "charliermarsh.ruff",
    "notebook.formatOnSave.enabled": true,
    "notebook.inlineValues": "auto",
    "notebook.lineNumbers": "on",
    "interactiveWindow.showExecutionHint": false,

    // Features: Chat
    "chat.agent.thinkingStyle": "collapsedPreview",
    "chat.notifyWindowOnConfirmation": false,
    "chat.notifyWindowOnResponseReceived": false,
    "chat.tools.terminal.enableAutoApprove": false,
    "inlineChat.holdToSpeech": false,

    // Application: Telemetry
    "telemetry.feedback.enabled": false,
    "telemetry.telemetryLevel": "off",

    // Security
    "security.allowedUNCHosts": ["wsl$"],

    // Security: Workspace
    "security.workspace.trust.startupPrompt": "always",

    // ##################################################
    // ###             Built-in extensions            ###
    // ##################################################

    // CSS: CSS
    "css.format.spaceAroundSelectorSeparator": true,
    // CSS: LESS
    "less.format.spaceAroundSelectorSeparator": true,
    // CSS: SCSS (Sass)
    "scss.format.spaceAroundSelectorSeparator": true,

    // Git
    "git.allowForcePush": true,
    "git.allowNoVerifyCommit": true,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.autoRepositoryDetection": false,
    "git.autoStash": true,
    "git.blame.editorDecoration.enabled": false, // Handled by GitLens
    "git.blame.statusBarItem.enabled": false, // Handled by GitLens
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.openRepositoryInParentFolders": "never",
    "git.pruneOnFetch": true,
    "git.rebaseWhenSync": true,
    "git.replaceTagsWhenPull": true,
    "git.smartCommitChanges": "tracked",
    "git.suggestSmartCommit": false,
    "git.timeline.date": "authored",
    "git.untrackedChanges": "separate",

    // JSON
    "json.format.keepLines": true,
    "json.maxItemsComputed": 10000,

    // Markdown
    "markdown.updateLinksOnFileMove.enabled": "prompt",
    "markdown.validate.enabled": true,

    // PHP
    "php.validate.executablePath": "C:\\DevEnvs\\PHP\\php.exe",

    // TypeScript and JavaScript: Formatting
    "javascript.format.semicolons": "remove",
    "typescript.format.semicolons": "remove",

    // ##################################################
    // ###                 Extensions                 ###
    // ##################################################

    // .NET Install Tool
    "dotnetAcquisitionExtension.enableTelemetry": false,

    // AHK++ (AutoHotkey Plus Plus)
    "AHK++.v1.formatter": {
        "allowedNumberOfEmptyLines": 2,
        "trimExtraSpaces": true
    },
    "AHK++.v2.formatter": {
        "preserveNewlines": false,
        "switchCaseAlignment": true,
        "symbolWithSameCase": true
    },
    "AHK++.v2.general": {
        "completeFunctionCalls": true
    },
    "AHK++.v2.warn": {
        "callWithoutParentheses": "On",
        "localSameAsGlobal": true
    },

    // autopep8
    "autopep8.importStrategy": "fromEnvironment",

    // AWS Toolkit
    "aws.telemetry": false,

    // Azure Repos
    "azureRepos.autoFetch.enabled": false,

    // Azure Resources
    "azureResourceGroups.deleteConfirmation": "ClickButton",
    "azureResourceGroups.enableChatStandIn": false,
    "azureResourceGroups.showHiddenTypes": true,

    // Black Formatter
    "black-formatter.importStrategy": "fromEnvironment",

    // C/C++: IntelliSense
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.workspaceParsingPriority": "high",
    // C/C++: Formatting
    "C_Cpp.vcFormat.indent.caseLabels": true,
    "C_Cpp.vcFormat.indent.namespaceContents": false,
    "C_Cpp.vcFormat.newLine.beforeCatch": false,
    "C_Cpp.vcFormat.newLine.beforeElse": false,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,
    // C/C++: Resource Management
    /*
     * Default path varies by platform:
     * - Linux: ${XDG_CACHE_HOME:-$HOME/.cache}/vscode-cpp-tools
     * - macOS: $HOME/Library/Caches/vscode-cpptools
     * - Windows: %LocalAppData%/Microsoft/vscode-cpptools
     */
    //"C_Cpp.intelliSenseCachePath": "D:/Cache/VS Code/cpp-tools"
    // C/C++: Miscellanous
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.loggingLevel": "Warning",
    "C_Cpp.windowsErrorReportingMode": "disabled",

    // C#: Text Editor
    "dotnet.formatting.organizeImportsOnFormat": true,
    // C#: Debugger
    /*
     * Default path varies by platform:
     * - Windows: %TEMP%/SymbolCache
     * - Linux & macOS: $HOME/.dotnet/symbolcache
     */
    //"csharp.debug.symbolOptions.cachePath": "D:/Symbols/Cache",
    "csharp.debug.symbolOptions.searchMicrosoftSymbolServer": true,
    "csharp.debug.symbolOptions.searchNuGetOrgSymbolServer": true,
    // C#: OmniSharp
    "csharp.suppressHiddenDiagnostics": false,
    /*
     * EditorConfig support may conflict with Visual Studio if running
     * See: https://github.com/OmniSharp/omnisharp-roslyn/issues/2230
     */
    //"omnisharp.enableEditorConfigSupport": false,
    "omnisharp.sdkIncludePrereleases": false,

    // C# Dev Kit
    "dotnet.automaticallyCreateSolutionInWorkspace": false,
    "dotnet.testWindow.enableTestExplorerDiff": true,
    "dotnet.testWindow.useTestingPlatformProtocol": true,

    // CloudFormation Linter
    "cfnLint.format.singleQuote": true,
    "cfnLint.validateUsingJsonSchema": true,

    // CMake Tools
    "cmake.configureOnOpen": false,
    "cmake.options.statusBarVisibility": "visible",

    // Container Tools
    "containers.containers.sortBy": "Label",
    "containers.contexts.showInStatusBar": true,
    "containers.images.sortBy": "Label",
    "containers.networks.sortBy": "Label",
    "containers.volumes.sortBy": "Label",

    // Debugger for Java
    "java.debug.settings.showStaticVariables": true,
    "java.silentNotification": true,

    // Dev Containers
    "dev.containers.copyGitConfig": false,
    "dev.containers.forwardWSLServices": false,
    "dev.containers.logLevel": "info",
    "dev.containers.mountWaylandSocket": false,
    "dev.containers.optimisticallyLaunchDocker": false,
    "dotfiles.installCommand": "dot-update -a",
    "dotfiles.repository": "ralish/dotfiles",
    "dotfiles.targetPath": "~/dotfiles",

    // DevSkim: Rules
    "MS-CST-E.vscode-devskim.rules.enableBestPracticeSeverityRules": true,
    "MS-CST-E.vscode-devskim.rules.enableManualReviewSeverityRules": true,
    // DevSkim: Suppressions
    "MS-CST-E.vscode-devskim.suppressions.suppressionDurationInDays": 0,

    // EditorConfig
    "editorconfig.showMenuEntry": false,

    // ESLint
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,

    // Even Better TOML
    "evenBetterToml.formatter.alignComments": true,
    "evenBetterToml.formatter.alignEntries": true,
    "evenBetterToml.formatter.allowedBlankLines": 2,
    "evenBetterToml.formatter.columnWidth": 80,

    // Extension Pack for Java
    "java.help.showReleaseNotes": false,

    // Flake8
    "flake8.importStrategy": "fromEnvironment",

    // GitHub Copilot
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },

    // GitHub Pull Requests
    "githubIssues.issueBranchTitle": "issue${issueNumber}",
    "githubIssues.useBranchForIssues": "prompt",
    "githubPullRequests.defaultCreateOption": "create",

    // GitHub Repositories
    "githubRepositories.autoFetch.enabled": false,
    "githubRepositories.indexing.verboseDownloadNotification": false,

    // GitLens: General
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.plusFeatures.enabled": false,
    // GitLens: Commit Graph
    "gitlens.graph.layout": "editor",
    "gitlens.graph.commitOrdering": "author-date",
    "gitlens.graph.dimMergeCommits": true,
    // GitLens: Launchpad
    "gitlens.launchpad.indicator.enabled": false,
    "gitlens.launchpad.indicator.label": "counts",
    // GitLens: Terminal
    "gitlens.gitkraken.mcp.autoEnabled": false,
    // GitLens: AI
    "gitlens.ai.enabled": false,
    // GitLens: Date & Times
    "gitlens.defaultDateStyle": "absolute",
    // GitLens: Advanced
    "gitlens.telemetry.enabled": false,

    // Go
    "go.survey.prompt": false,
    "go.testExplorer.packageDisplayMode": "nested",

    // Gradle
    "gradle.showStoppedDaemons": true,

    // HTML CSS Support
    "css.autoValidation": "Always",

    // isort
    "isort.importStrategy": "fromEnvironment",

    // Kubernetes
    "vscode-kubernetes.log-viewer.timestamp": true,

    // Lua
    "Lua.codeLens.enable": true,

    // Language Support for Java: Project Import/Update
    "java.project.encoding": "warning",
    // Language Support for Java: Build
    "java.autobuild.enabled": false,
    // Language Support for Java: Code Completion
    "java.completion.chain.enabled": true,
    "java.completion.matchCase": "off",
    "java.signatureHelp.description.enabled": true,
    // Language Support for Java: Code Generation
    "java.codeGeneration.useBlocks": true,
    // Language Support for Java: Code Action
    "java.saveActions.organizeImports": true,
    // Language Support for Java: Code Navigation
    "java.referencesCodeLens.enabled": true,
    "java.implementationCodeLens": "all",

    // Markdown All in One
    "markdown.extension.toc.levels": "1..3",
    "markdown.extension.print.theme": "dark",
    "markdown.extension.showActionButtons": true,

    // Maven
    "maven.showInExplorerContextMenu": false,
    "maven.view": "hierarchical",

    // MinifyAll
    "MinifyAll.disableCodeContextMenu": true,
    "MinifyAll.disableFileExplorerContextMenu": true,
    "MinifyAll.openMinifiedDocument": false,
    "MinifyAll.PrefixOfNewMinifiedFiles": ".min",

    // Mypy Type Checker
    "mypy-type-checker.importStrategy": "fromEnvironment",

    // PHP Intelephense
    "intelephense.codeLens.implementations.enable": true,
    "intelephense.codeLens.overrides.enable": true,
    "intelephense.codeLens.parent.enable": true,
    "intelephense.codeLens.references.enable": true,
    "intelephense.codeLens.usages.enable": true,
    "intelephense.telemetry.enabled": false,

    // PowerShell: Interface
    "powershell.promptToUpdatePowerShell": false,
    // PowerShell: Formatting
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useConstantStrings": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    // PowerShell: Editor Services
    "powershell.scriptAnalysis.settingsPath": "${env:DOTFILES}/posh/PSScriptAnalyzerSettings.psd1",
    // PowerShell: Pester
    "powershell.pester.useLegacyCodeLens": false,
    // PowerShell: Terminal
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.suppressStartupBanner": true,

    // Prettier
    "prettier.endOfLine": "auto",
    "prettier.singleQuote": true,

    // Project Manager for Java
    "java.dependency.packagePresentation": "hierarchical",

    // Pylance
    "python.analysis.autoFormatStrings": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.languageServerMode": "default",
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.typeEvaluation.deprecateTypingAliases": true,
    "python.analysis.typeEvaluation.disableBytesTypePromotions": true,
    "python.analysis.typeEvaluation.enableReachabilityAnalysis": true,

    // Pylint
    "pylint.importStrategy": "fromEnvironment",

    // Python
    "python.experiments.enabled": false,
    "python.useEnvironmentsExtension": true,

    // Rainbow CSV
    "rainbow_csv.virtual_alignment_mode": "manual",
    "rainbow_csv.virtual_alignment_char": "space",
    "rainbow_csv.csv_lint_detect_trailing_spaces": true,
    "rainbow_csv.rbql_with_headers_by_default": true,

    // Red Hat (shared by Red Hat extensions)
    "redhat.telemetry.enabled": false,

    // Remote - SSH
    "remote.SSH.defaultExtensions": [
        // Select Line Status Bar
        "tomoki1207.selectline-statusbar"
    ],
    "remote.SSH.experimental.chat": false,
    "remote.SSH.suppressWindowsSshWarning": true,

    // Remote - Tunnels
    "remote.tunnels.alwaysUpdateCLI": true,

    // Remote Explorer
    "remote-explorer.foldersSortOrder": "alphabetical",

    // Remote Repositories
    "remoteHub.commitDirectlyWarning": "auto",
    "remoteHub.richNavigation.enabled": true,
    "remoteHub.switchToCreatedBranch": "always",

    // Ruff
    "ruff.configurationPreference": "filesystemFirst",
    "ruff.format.preview": true,
    "ruff.lint.preview": true,

    // Select Line Status Bar
    "selectline.alignment": "right",
    "selectline.displayFormat": "%d lines",
    "selectline.statusbarPriority": 200,

    // shell-format
    "shellformat.useEditorConfig": true,

    // ShellCheck
    "shellcheck.customArgs": [
        // Follow source directives
        "-x"
    ],
    "shellcheck.disableVersionCheck": true,
    "shellcheck.executablePath": "shellcheck",
    "shellcheck.useWorkspaceRootAsCwd": true,

    // Version Lens
    "versionlens.suggestions.showOnStartup": true,
    "versionlens.suggestions.showSuggestionsStats": true,

    // vscode-icons
    "vsicons.associations.files": [
        {
            "icon": "git",
            "extensions": [".git-blame-ignore-revs"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "json",
            "extensions": ["project.nuget.cache"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "markdownlint",
            "extensions": [".markdownlintrc"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "xml",
            "extensions": ["app.manifest"],
            "filename": true,
            "format": "svg"
        }
    ],
    "vsicons.dontShowNewVersionMessage": true,

    // WSL
    "remote.WSL.useShellEnvironment": false,

    // XML
    "xml.codeLens.enabled": true,
    "xml.format.emptyElements": "collapse",
    "xml.format.enforceQuoteStyle": "preferred",
    "xml.format.maxLineWidth": 0,
    "xml.symbols.maxItemsComputed": 10000,

    // YAML
    "yaml.format.singleQuote": true,
    "yaml.maxItemsComputed": 10000,

    // ##################################################
    // ###           Language customisations          ###
    // ##################################################

    "[dockercompose]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.insertSpaces": true,
        "editor.rulers": [79],
        "editor.quickSuggestions": {
            "other": "on",
            "comments": "off",
            "strings": "on"
        }
    },

    "[dynamic csv]": {
        // Rainbow CSV: For virtual alignment mode
        "editor.inlayHints.maximumLength": 0
    },

    "[git-commit]": {
        // Rewrap Revived: Wrap commit messages
        "rewrap.autoWrap.enabled": true,
        "rewrap.wrappingColumn": 72
    },

    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },

    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    "[javascript][typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",

        // Trailing whitespace has special meaning
        "files.trimTrailingWhitespace": false,

        // Don't restore the last editor view state
        "workbench.editor.restoreViewState": false
    },

    "[powershell]": {
        "editor.defaultFormatter": "ms-vscode.powershell"
    },

    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },

    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },

    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },

    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml",

        // XML: For automatic tag renaming
        "editor.linkedEditing": true
    },

    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    }
}
