{
    // File paths to language mappings
    //
    // Associations to the "plaintext" type are generally for hinting the
    // vscode-icons extension as to the preferred icon.
    "files.associations": {
        // generic
        "VERSION": "plaintext",
        // root
        ".ignore": "ignore",
        "dot-manage": "shellscript",
        "dot-update": "shellscript",
        // bash
        ".bash_logout": "shellscript",
        ".bashrc": "shellscript",
        ".profile": "shellscript",
        // bazaar
        "**/.bazaar/*.conf": "ini",
        // clink
        "clink_history*": "plaintext",
        "clink_settings": "properties",
        // curl
        ".curlrc": "properties",
        // cygwin
        ".startxwinrc": "shellscript",
        // dig
        ".digrc": "properties",
        // editline
        ".editrc": "properties",
        // git
        ".gitattributes": "properties",
        ".gitconfig": "ini",
        ".gitconfig-*": "ini",
        ".gitignore": "ignore",
        ".gitmodules": "ini",
        "**/git/bin/*": "shellscript",
        "**/git/hooks/*": "shellscript",
        // git-win
        ".git-for-windows-updater": "ini",
        // htop
        "htoprc": "properties",
        // irssi
        "**/irssi/.irssi/*": "plaintext",
        // jetbrains
        "*.DotSettings": "xml",
        // kpcli
        "**/kpcli/bin/*": "perl",
        // less
        ".lesskey": "properties",
        // markdownlint
        ".markdownlintrc": "jsonc",
        // mysql
        ".my.cnf": "ini",
        // npm
        ".npmrc": "properties",
        // openssh
        "**/.ssh/config": "ssh_config",
        "**/.ssh/known_hosts": "plaintext",
        "**/.ssh/known_hosts.old": "plaintext",
        "**/.ssh/hosts/*": "plaintext",
        "**/.ssh/includes/*": "ssh_config",
        "**/.ssh/templates/*": "ssh_config",
        "**/openssh/bin/*": "shellscript",
        // openssl
        "**/openssl/*.cnf": "ini",
        // pgsql
        ".psqlrc": "sql",
        // pip
        "pip.conf": "ini",
        // prettier
        ".prettierignore": "ignore",
        ".prettierrc": "json",
        // quilt
        ".quiltrc": "shellscript",
        // readline
        ".inputrc": "properties",
        // ripgrep
        ".ripgreprc": "properties",
        // sbuild
        ".mk-sbuild.rc": "shellscript",
        // screen
        ".screenrc": "properties",
        // scripts
        "**/scripts/bin/*": "shellscript",
        // shellcheck
        ".shellcheckrc": "properties",
        // stow
        ".stow-local-ignore": "plaintext",
        "**/stow/bin/*": "perl",
        // subversion
        "**/.subversion/config": "ini",
        "**/.subversion/servers": "ini",
        // vscode
        "**/vscode/*.json": "jsonc",
        // wget
        ".wgetrc": "properties",
        // windows/Windows Sandbox
        "*.wsb": "xml",
        // winget
        "**/winget/*.json": "jsonc",
        // winterm
        "**/winterm/*.json": "jsonc",
        // wsl
        ".wslconfig": "ini",
        "wsl.conf": "ini",
        // xdg-user-dir
        "user-dirs.dirs": "shellscript",
        "user-dirs.locale": "plaintext",
        // xlaunch
        "*.xlaunch": "xml",
        // zsh
        ".zlogout": "shellscript",
        ".zshrc": "shellscript"
    },

    // Files to hide in Explorer tree
    "files.exclude": {
        "**/.venv": true,
        "**/~$*.doc*": true,
        "**/~$*.ppt*": true,
        "**/~$*.xls*": true
    },

    // Excludes for search & quick open
    "search.exclude": {
        "**/dotfiles/modules/**": true,
        "**/dotfiles/posh/Help/**": true,
        "**/dotfiles/posh/Modules/**": true,
        "**/dotfiles/pwsh/**": true,
        "**/dotfiles/vim/.vim/**": true,
        "**/dotfiles/zsh/.oh-my-zsh/**": true,
        "**/dotfiles/zsh/oh-my-zsh/**": true
    },

    // Markdown table of contents generation
    "markdown.extension.toc.levels": "2..2",
    "markdown.extension.toc.slugifyMode": "github",

    // PowerShell script analysis
    "powershell.scriptAnalysis.settingsPath": ".config/PSScriptAnalyzerSettings.psd1",

    // Prettier code formatter
    "prettier.configPath": ".config/.prettierrc",

    // Python virtual environment
    "python.defaultInterpreterPath": "${env:DOTFILES}/.venv",

    // Excludes for ShellCheck linter
    "shellcheck.ignorePatterns": {
        "**/*.zsh": true,
        "**/.zshrc": true
    },

    // VS Code explorer icons
    "vsicons.presets.foldersAllDefaultIcon": true,
    "vsicons.associations.files": [
        {
            "icon": "binary",
            "extensions": ["ocb", "pmf"],
            "format": "svg"
        },
        {
            "icon": "binary",
            "extensions": [".less"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "config",
            "extensions": ["prf"],
            "format": "svg"
        },
        {
            "icon": "config",
            "extensions": [".dircolors"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "git",
            "extensions": [
                ".git-for-windows-updater",
                ".gitconfig-delta",
                ".gitconfig-priv",
                ".gitconfig-win"
            ],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "java",
            "extensions": ["java_home.save"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "key",
            "extensions": ["pub"],
            "format": "svg"
        },
        {
            "icon": "log",
            "extensions": [".bash_history", "clink_history"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "mysql",
            "extensions": [".my.cnf"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "onenote",
            "extensions": ["onetastic"],
            "format": "svg"
        },
        {
            "icon": "pgsql",
            "extensions": [".psqlrc"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "pip",
            "extensions": ["pip.conf"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "text",
            "extensions": [".ignore", ".keepme"],
            "filename": true,
            "format": "svg"
        },
        {
            "icon": "vim",
            "extensions": [".viminfo"],
            "filename": true,
            "format": "svg"
        }
    ],

    // XML schema file associations
    "xml.fileAssociations": [
        {
            "pattern": "**/windows/Event Viewer/**.xml",
            "systemId": "windows/Event Viewer/Schemas/Viewer.xsd"
        },
        {
            "pattern": "**/windows/Windows Performance Recorder/*.xml",
            "systemId": "windows/Windows Performance Recorder/wpr.config.xsd"
        }
    ],

    "[ahk]": {
        "editor.rulers": [79]
    },

    "[bat]": {
        "editor.rulers": [79]
    },

    "[csharp]": {
        "editor.rulers": [79]
    },

    "[ini]": {
        "editor.rulers": [79]
    },

    "[javascript]": {
        "editor.rulers": [79],

        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    "[json][jsonc]": {
        "editor.rulers": [79],

        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.formatOnSave": true,

        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": "explicit"
        },

        // Trailing whitespace has special meaning
        "files.trimTrailingWhitespace": false
    },

    "[perl]": {
        "editor.rulers": [79]
    },

    "[powershell]": {
        "editor.rulers": [79],

        "editor.defaultFormatter": "ms-vscode.powershell",
        "editor.formatOnSave": true
    },

    "[properties]": {
        "editor.rulers": [79]
    },

    "[shellscript]": {
        "editor.rulers": [79],

        "editor.defaultFormatter": "foxundermoon.shell-format",
        "editor.formatOnSave": true,

        "editor.codeActionsOnSave": {
            "source.fixAll.shellcheck": "explicit"
        }
    },

    "[sql]": {
        "editor.rulers": [79]
    },

    "[ssh_config]": {
        "editor.rulers": [79]
    },

    "[vba]": {
        "editor.rulers": [79]
    },

    "[viml]": {
        "editor.rulers": [79]
    },

    "[xml]": {
        "editor.rulers": [79],

        // Some programs (e.g. Ghidra) end XML files with two newlines
        "files.trimFinalNewlines": false
    }
}
