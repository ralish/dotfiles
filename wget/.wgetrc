# Style of `dot` progress indicator (`default`, `binary`, `mega`, or `giga`)
dot_style = giga

# Follow FTP links in HTML documents
follow_ftp = on

# Default encoding for converting URLs
local_encoding = UTF-8

# Maximum redirections to follow [default: 20]
max_redirect = 5

# Never ascend to parent directories when downloading recursively
no_parent = on

# Progress indicator for downloading files (`dot` or `bar`)
progress = bar

# Treat "connection refused" errors as potentially transient
retry_connrefused = on

# Ignore `robots.txt` and `<meta name="robots" content="nofollow">`
robots = off

# Output received HTTP headers and FTP responses
server_response = on

# Timeout for all network operations (secs) [default: 900]
timeout = 30

# Use the file last modification date provided by servers
timestamping = on

# Number of attempts to retrieve a URL [default: 20]
tries = 3

# Use the last component of a redirection URL as the local file name
trust_server_names = on

# Override the default `Wget/<version>` user agent
user_agent = Mozilla/5.0 (Windows NT 10.0; Trident/7.0; rv:11.0) like Gecko

