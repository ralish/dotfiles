# Request compressed responses and automatically decompress the content
compressed

# Fail with error code 22 and no response body for HTTP response codes >= 400
fail

# Automatically retry the request with the new location on HTTP 3xx responses
location

# Use the previous URL for the `Referer` header when following a redirect
referer = ";auto"

# Override the default `curl/<version>` user agent
user-agent = "Mozilla/5.0 (Windows NT 10.0; Trident/7.0; rv:11.0) like Gecko"

