<?xml version="1.0" encoding="utf-8"?>
<Component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ralish/PSDotFiles/main/Metadata.xsd">
    <FriendlyName>Vim</FriendlyName>

    <Detection>
        <Method>Static</Method>
        <Availability>AlwaysInstall</Availability>
    </Detection>

    <InstallPath>
        <HideSymlinks>true</HideSymlinks>
    </InstallPath>

    <!--
        This should also include .vim -> vimfiles but directories aren't yet
        supported in PSDotFiles for AdditionalPaths.
    -->
    <AdditionalPaths>
        <AdditionalPath source=".vimrc">
            <TargetPath symlink="_vimrc" />
        </AdditionalPath>
    </AdditionalPaths>
</Component>