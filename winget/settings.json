{
    /*
     * Windows Package Manager (WinGet) settings
     *
     * Last reviewed release: v1.11.430
     * Default file path: %LOCALAPPDATA%\Packages\Microsoft.DesktopAppInstaller_8wekyb3d8bbwe\LocalState\settings.json
     */

    "$help": "https://aka.ms/winget-settings",
    "$schema": "https://aka.ms/winget-settings.schema.json",

    "interactivity": {
        "disable": false
    },

    "logging": {
        "level": "info",
        "channels": ["default"]
    },

    "network": {
        "downloader": "default",
        "doProgressTimeoutInSeconds": 60
    },

    "source": {
        "autoUpdateIntervalInMinutes": 15
    },

    "telemetry": {
        "disable": true
    },

    "visual": {
        "anonymizeDisplayedPaths": true,
        "enableSixels": true,
        "progressBar": "accent"
    },

    "downloadBehavior": {
        "defaultDownloadDirectory": "%USERPROFILE%/Downloads/WinGet/"
    },

    "installBehavior": {
        "archiveExtractionMethod": "shellApi",
        "disableInstallNotes": false,
        "maxResumes": 3,
        "skipDependencies": false,

        "portablePackageMachineRoot": "%PROGRAMFILES%/WinGet/Packages/",
        "portablePackageUserRoot": "%LOCALAPPDATA%/Microsoft/WinGet/Packages/",

        "preferences": {
            "locale": ["en-AU", "en-GB", "en-US"],
            "scope": "user"
        }
    },

    "configureBehavior": {
        "defaultModuleRoot": "%LOCALAPPDATA%/Microsoft/WinGet/Configuration/Modules/"
    },

    "uninstallBehavior": {
        "purgePortablePackage": false
    }
}
